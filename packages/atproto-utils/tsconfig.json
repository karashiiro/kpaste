{
  "extends": "@kpaste-app/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["@atcute/atproto"],
    "skipLibCheck": true,
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
